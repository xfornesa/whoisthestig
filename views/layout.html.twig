<head>
  <meta charset="utf-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

  {% set st_title = 'Generador de noticias Yo soy Stig' %}
  {% set st_url = app.request.uri %}
  {% set st_summary = 'Crea tu propia página Yo soy Stig con este generador de noticias' %}
  {% set st_image = 'http://' ~ app.request.host ~ '/img/i-am-the-stig.png' %}

  <title>{% block meta_title %}{{ st_title }}{% endblock %}</title>
  <meta name="description" content="{% block meta_description %}{{ st_summary }}{% endblock %}">
  <meta name="author" content="Prunátic Consultoría Web">

  <meta property="og:title" content="{% block og_title %}{{ st_title }}{% endblock %}" />
  <meta property="og:type" content="{% block og_type %}News generator{% endblock %}" />
  <meta property="og:url" content="{% block og_url %}{{ st_url }}{% endblock %}" />
  <meta property="og:image" content="{% block og_image %}{{ st_image }}{% endblock %}" />
  <meta property="og:description" content="{% block og_description %}{{ st_summary }}{% endblock %}" />
  <meta property="og:site_name" content="{% block og_site_name %}I am The Stig{% endblock %}" />


  <meta name="viewport" content="width=device-width">

  <link rel="stylesheet" href="/css/bootstrap.min.css">
  <style>
  body {
    padding-top: 60px;
    padding-bottom: 40px;
  }
  </style>
  <link rel="stylesheet" href="/css/bootstrap-responsive.min.css">
  <link rel="stylesheet" href="/css/colorbox.css">
  <link rel="stylesheet" href="/css/style.css">

  <script src="/js/libs/jquery-1.7.2.min.js"></script>
  <script src="/js/libs/modernizr-2.5.3-respond-1.1.0.min.js"></script>

  <script type="text/javascript">var switchTo5x=true;</script>
  <script type="text/javascript" src="http://w.sharethis.com/button/buttons.js"></script>
  <script type="text/javascript">stLight.options({publisher: "7580c3f7-89dc-42ea-af93-1ce11d7cac16"}); </script>
  
</head>
<body style="background-color: grey;">
    <div class="container">
      <div class="span8 offset2 newspaper">
        <header class="span8">
          <div class="navbar">
            <div class="navbar-inner">
              <div class="container">
                  {% include '_navigation.html.twig' %}
              </div>
            </div>
          </div>
        </header>
        <div class="span8">
        {% block content %}{% endblock %}
        </div>
        <hr class="span8">
        <footer class="span8">
          <div class="span8">
            {% block share_page %}
              {% include '_sharethis.html.twig' %}
            {% endblock %}
            {% block footer %}
              {% include '_footer.html.twig' %}
            {% endblock %}
          </div>
        </footer>
      </div>
    </div> <!-- /container -->
  <script src="//ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js"></script>
  <script>window.jQuery || document.write('<script src="/js/libs/jquery-1.7.2.min.js"><\/script>')</script>

  <script src="/js/libs/bootstrap/bootstrap.min.js"></script>
  <script src="/js/libs/jquery.colorbox-min.js"></script>

  <script src="/js/plugins.js"></script>
  <script src="/js/script.js"></script>
